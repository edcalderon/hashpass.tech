{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Lambda function for BSL2025 Agenda Monitor",
  "Parameters": {
    "env": {
      "Type": "String",
      "Default": "dev"
    },
    "functionName": {
      "Type": "String",
      "Default": "agendaMonitor"
    },
    "DeploymentBucket": {
      "Type": "String"
    },
    "S3Key": {
      "Type": "String"
    }
  },
  "Conditions": {},
  "Resources": {
    "LambdaFunction": {
      "Type": "AWS::Lambda::Function",
      "Metadata": {
        "aws:asset:path": "./src",
        "aws:asset:property": "Code"
      },
      "Properties": {
        "Code": {
          "S3Bucket": {
            "Ref": "DeploymentBucket"
          },
          "S3Key": {
            "Ref": "S3Key"
          }
        },
        "Handler": "index.handler",
        "FunctionName": {
          "Ref": "functionName"
        },
        "Environment": {
          "Variables": {
            "ENV": {
              "Ref": "env"
            },
            "REGION": {
              "Ref": "AWS::Region"
            },
            "SUPABASE_URL_PARAMETER": "/hashpass/bsl2025/supabase/url",
            "SUPABASE_KEY_PARAMETER": "/hashpass/bsl2025/supabase/service-role-key"
          }
        },
        "Role": {
          "Fn::GetAtt": [
            "LambdaExecutionRole",
            "Arn"
          ]
        },
        "Runtime": "nodejs20.x",
        "Layers": [],
        "Timeout": 300,
        "MemorySize": 512
      }
    },
    "LambdaExecutionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "RoleName": {
          "Fn::Sub": [
            "${functionName}LambdaRole${env}",
            {
              "functionName": {
                "Ref": "functionName"
              },
              "env": {
                "Ref": "env"
              }
            }
          ]
        },
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": "CloudWatchLogsPolicy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:CreateLogGroup",
                    "logs:CreateLogStream",
                    "logs:PutLogEvents"
                  ],
                  "Resource": [
                    {
                      "Fn::Sub": [
                        "arn:aws:logs:${region}:${account}:log-group:/aws/lambda/${functionName}:*",
                        {
                          "region": {
                            "Ref": "AWS::Region"
                          },
                          "account": {
                            "Ref": "AWS::AccountId"
                          },
                          "functionName": {
                            "Ref": "functionName"
                          }
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          },
          {
            "PolicyName": "ParameterStorePolicy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "ssm:GetParameter",
                    "ssm:GetParameters"
                  ],
                  "Resource": [
                    "arn:aws:ssm:*:*:parameter/hashpass/bsl2025/supabase/*"
                  ]
                }
              ]
            }
          }
        ]
      }
    },
    "EventBridgeRule": {
      "Type": "AWS::Events::Rule",
      "Properties": {
        "Name": {
          "Fn::Sub": [
            "${functionName}Schedule${env}",
            {
              "functionName": {
                "Ref": "functionName"
              },
              "env": {
                "Ref": "env"
              }
            }
          ]
        },
        "Description": "Schedule for BSL2025 Agenda Monitor",
        "ScheduleExpression": "rate(5 minutes)",
        "State": "ENABLED",
        "Targets": [
          {
            "Arn": {
              "Fn::GetAtt": [
                "LambdaFunction",
                "Arn"
              ]
            },
            "Id": "AgendaMonitorTarget",
            "Input": "{\"source\": \"eventbridge\"}"
          }
        ]
      }
    },
    "EventBridgePermission": {
      "Type": "AWS::Lambda::Permission",
      "Properties": {
        "FunctionName": {
          "Ref": "LambdaFunction"
        },
        "Action": "lambda:InvokeFunction",
        "Principal": "events.amazonaws.com",
        "SourceArn": {
          "Fn::GetAtt": [
            "EventBridgeRule",
            "Arn"
          ]
        }
      }
    }
  },
  "Outputs": {
    "Name": {
      "Value": {
        "Ref": "LambdaFunction"
      }
    },
    "Arn": {
      "Value": {
        "Fn::GetAtt": [
          "LambdaFunction",
          "Arn"
        ]
      }
    },
    "Region": {
      "Value": {
        "Ref": "AWS::Region"
      }
    },
    "LambdaExecutionRole": {
      "Value": {
        "Ref": "LambdaExecutionRole"
      }
    },
    "LambdaExecutionRoleArn": {
      "Value": {
        "Fn::GetAtt": [
          "LambdaExecutionRole",
          "Arn"
        ]
      }
    }
  }
}